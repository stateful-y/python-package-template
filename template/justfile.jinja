# Available commands for {{ project_name }}

# Show all available commands
default:
    @just --list

# Install dependencies and pre-commit
install:
    uv sync --group dev
    uvx pre-commit install

# Run tests
test:
    uv run pytest -v

# Run fast tests (excludes slow and integration tests)
test-fast:
    uv run pytest -m "not slow and not integration" -v

# Run slow tests (includes integration tests)
test-slow:
    uv run pytest -m "slow or integration" -v

# Run tests with coverage
test-cov:
    uv run pytest --cov={{ package_name }} --cov-report=html --cov-report=term

# Run docstring examples
doctest:
    uv run pytest --doctest-modules --doctest-continue-on-failure src/{{ package_name }}
{% if include_examples %}

# Run marimo example notebook interactively
example:
    uv run marimo edit examples/hello.py
{% endif %}

# Run linters and type checkers
lint:
    uv run ruff check src tests
    uv run ty check src

# Format code and fix issues
format:
    uv run ruff format src tests
    uv run ruff check src tests --fix

# Build documentation
docs:
    uvx nox -s build_docs

# Serve documentation locally
serve:
    uvx nox -s serve_docs

# Clean build artifacts
clean:
    rm -rf build dist *.egg-info
    rm -rf .pytest_cache .ty_cache .ruff_cache
    rm -rf htmlcov .coverage coverage.xml
    find . -type d -name "__pycache__" -exec rm -rf {} + 2>/dev/null || true
    find . -type f -name "*.pyc" -delete

# Run all quality checks (lint, test)
check: lint test

# Run pre-commit hooks on all files
pre-commit:
    uvx pre-commit run --all-files
